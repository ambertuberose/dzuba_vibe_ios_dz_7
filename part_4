class Man {
  var passport: Passport? // Ссылка на паспорт мужчины

  deinit {
    // Выведем в консоль сообщение о том, что объект мужчины удален из памяти
    print("мужчина удален из памяти")
  }
}

class Passport {
  let man: Man // Ссылка на мужчину, которому принадлежит паспорт

  init(man: Man) {
    self.man = man // Установим владельца паспорта при его создании
  }

  deinit {
    // Выведем в консоль сообщение о том, что объект паспорта удален из памяти
    print("паспорт удален из памяти")
  }
}

var man: Man? = Man() // Создаем объект мужчины
if let man = man {
    let passport: Passport? = Passport(man: man) // Создаем объект паспорта с владельцем
    man.passport = passport // Устанавливаем паспорт мужчине
}

man?.passport = nil // Освобождаем ссылку на паспорт
man = nil // Удаляем объект мужчины
